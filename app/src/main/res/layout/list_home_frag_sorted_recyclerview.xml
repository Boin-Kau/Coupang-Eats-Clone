<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="20dp">
    
    <LinearLayout
        android:id="@+id/list_sorted_item_layout"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_sorted_item_image_view1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_category_img_2"
            android:layout_margin="3dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/list_sorted_item_image_view2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_category_img_10"
                android:scaleType="fitXY"
                android:layout_margin="3dp"/>

            <ImageView
                android:id="@+id/list_sorted_item_image_view3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_category_img_18"
                android:scaleType="fitXY"
                android:layout_margin="3dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_sorted_item_middle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/list_sorted_item_layout"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/list_sorted_item_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노랑통닭 원흥점"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/list_sorted_item_is_cheetah_iv"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_ischeetah_orange"
            android:layout_marginStart="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/list_sorted_item_delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27분-37분"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_sorted_item_second_middle_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/list_sorted_item_middle_layout"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/list_sorted_item_star_and_review_layout"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/list_sorted_item_star_iv"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_yellow_star" />

            <TextView
                android:layout_marginStart="2dp"
                android:id="@+id/list_sorted_item_star_and_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0(18) ∙ "
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/list_sorted_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5km ∙ "
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_sorted_item_delivery_cost"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="무료배달"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_sorted_item_coupon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_below="@id/list_sorted_item_second_middle_layout"
        android:background="@drawable/store_activity_get_coupon_btn_style"
        android:padding="2dp">

        <ImageView
            android:id="@+id/list_sorted_item_coupon_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_coupon"/>

        <TextView
            android:id="@+id/list_sorted_item_coupon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6000원 쿠폰"
            android:textColor="@color/app_custom_color"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12sp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>