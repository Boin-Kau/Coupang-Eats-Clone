<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/list_favorite_activity_item_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/list_favorite_activity_item_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="store name"
        android:layout_toRightOf="@id/list_favorite_activity_item_iv"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"/>

    <ImageView
        android:id="@+id/list_favorite_activity_item_star_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_yellow_star"
        android:layout_below="@id/list_favorite_activity_item_store_name"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/list_favorite_activity_item_iv"/>

    <TextView
        android:layout_toRightOf="@+id/list_favorite_activity_item_star_iv"
        android:layout_marginTop="3dp"
        android:layout_marginStart="2dp"
        android:id="@+id/list_favorite_activity_item_star_and_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="star and review"
        android:textColor="@color/black"
        android:layout_below="@id/list_favorite_activity_item_store_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"/>

    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/list_favorite_activity_item_info_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info detail"
        android:textColor="@color/black"
        android:layout_below="@id/list_favorite_activity_item_star_and_review"
        android:layout_toRightOf="@id/list_favorite_activity_item_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_marginStart="10dp"/>

</RelativeLayout>