<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_location"
        android:id="@+id/list_address_list_item_iv"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/list_address_list_item_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소 이름"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_toRightOf="@id/list_address_list_item_iv"
        tools:ignore="RtlHardcoded"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/list_address_list_item_place_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:layout_marginTop="5dp"
        android:layout_below="@id/list_address_list_item_place_name"
        android:layout_toRightOf="@id/list_address_list_item_iv"
        android:textSize="10sp"
        tools:ignore="RtlHardcoded,SmallSp"
        android:layout_marginStart="8dp"/>

</RelativeLayout>