<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_cart_activity_cart_list_item_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="1"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/list_cart_activity_cart_list_item_name"
            android:layout_marginStart="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="블랙알리오"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/list_cart_activity_cart_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000원"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_cancel"
            android:layout_marginStart="15dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/list_cart_activity_cart_list_item_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray_text_color"
        android:layout_marginStart="24dp"
        android:text="후라이드"/>

</LinearLayout>