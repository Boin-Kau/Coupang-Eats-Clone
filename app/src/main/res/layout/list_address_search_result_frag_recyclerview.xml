<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    tools:ignore="RtlSymmetry"
    android:id="@+id/address">

    <TextView
        android:id="@+id/list_address_search_result_item_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소 이름"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/list_address_search_result_item_address_name"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/list_address_search_result_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지번"
            android:textColor="@color/app_custom_color"
            android:textSize="12sp"
            android:background="@drawable/road_and_jibeon_box_style"
            android:padding="2dp"
            android:textStyle="bold"
            android:layout_margin="1dp"/>

        <TextView
            android:id="@+id/list_address_search_result_item_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울 서초구 반포동"
            android:layout_marginStart="5dp"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>