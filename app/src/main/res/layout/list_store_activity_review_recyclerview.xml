<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/store_activity_review_recyclerview_item_style">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_category_img_23"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/list_review_item_iv"/>

    <TextView
        android:id="@+id/list_review_item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        android:text="리뷰내용"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/list_review_item_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:id="@+id/list_review_item_star_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_review_item_iv"
        android:layout_marginStart="10dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_yellow_star" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_yellow_star" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_yellow_star" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_yellow_star" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_yellow_star" />
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>