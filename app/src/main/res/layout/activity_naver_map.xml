<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frag_naver_map"
            android:name="com.naver.maps.map.MapFragment" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp">

        <TextView
            android:id="@+id/naver_map_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소 타이틀"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/naver_map_place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소 서브 타이틀"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="@color/gray_text_color"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/naver_map_set_address_btn"
            android:textColor="@color/white"
            android:background="@drawable/naver_map_btn_style"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>